<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.lyhoangvinh.simple.data.entities.Status"/>
        <import type="com.lyhoangvinh.simple.data.entities.State"/>
        <variable name="vm"
                  type="com.lyhoangvinh.simple.ui.features.avg.splash.SplashViewModel"/>
        <variable name="state"
                  type="com.lyhoangvinh.simple.data.entities.State"/>


    </data>
    <RelativeLayout
            android:background="@drawable/bg_gradient_evening_sunshine"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/logo"
                app:srcCompat="@drawable/kotlin_logo"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_centerInParent="true"
                android:layout_height="200dp"/>

        <TextView
                android:id="@+id/tvLoading"
                android:layout_height="wrap_content"
                android:layout_width="200dp"
                android:layout_below="@+id/logo"
                android:textColor="@android:color/white"
                android:textSize="@dimen/ts_18_sp"
                android:padding="@dimen/padding_16dp"
                android:gravity="center"
                android:layout_centerInParent="true"/>

        <ProgressBar
                android:id="@+id/viewLoading"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="@dimen/padding_40dp"
                android:layout_height="@dimen/padding_40dp"
                android:layout_centerInParent="true"
                android:animatedVisibility="@{state.status == Status.LOADING}"
                tools:visibility="visible"/>
    </RelativeLayout>
</layout>
